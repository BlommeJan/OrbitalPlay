<UserControl x:Class="FitnessGameLauncher.Views.ControllerView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:vm="clr-namespace:FitnessGameLauncher.ViewModels"
             xmlns:local="clr-namespace:FitnessGameLauncher.Views"
             x:Name="ControllerViewControl">

    <!-- Set the DataContext to ControllerViewModel -->
    <UserControl.DataContext>
        <vm:ControllerViewModel />
    </UserControl.DataContext>

    <Grid>
        <TextBlock Text="{Binding ControllerStatus}" FontSize="24" FontWeight="Bold"
                   HorizontalAlignment="Center" VerticalAlignment="Center"/>
    </Grid>
</UserControl>
